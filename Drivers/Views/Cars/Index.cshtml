@model List<Car>

@{
	ViewData["Title"] = "Автомобили";
}

<div class="panel">
	<form method="post" action="~/Cars/BatchDelete">
		<button type="submit">Провести массовое удаление автомобилей</button>	
	</form>
</div>

<table>
	<tr class="even-row">
		<th>Id</th>
		<th>Марка</th>
		<th>Модель</th>
		<th>Гос. номер</th>
	</tr>
	@for (int i = 0; i < Model.Count(); i++)
	{
		<tr class="@(i % 2 == 0 ? String.Empty : "even-row")">
			<td>@Model[i].Id</td>
			<td>@Model[i].Brand</td>
			<td>@Model[i].Model</td>
			<td>@Model[i].RegistrationNumber</td>
		</tr>
	}
</table>
